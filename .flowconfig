[declarations]
.*\/node_modules\/.*

[ignore]
.*\/\.history\/.*

[include]

[libs]
flow-typed/

[options]
; don't check all files
; all=true

module.use_strict=true

; https://github.com/facebook/flow/issues/5180#issuecomment-366657780
module.system.node.resolve_dirname=node_modules
module.system.node.resolve_dirname=./workspaces

module.file_ext=.js
module.file_ext=.css
module.file_ext=.scss
module.name_mapper.extension='css' -> 'empty/object'
module.name_mapper.extension='scss' -> 'empty/object'

esproposal.class_instance_fields=enable
esproposal.class_static_fields=enable
esproposal.decorators=warn
esproposal.export_star_as=enable
esproposal.optional_chaining=enable
esproposal.nullish_coalescing=enable
exact_by_default=true
experimental.const_params=true
types_first=true

[strict]
sketchy-null
; sketchy-null-bool
; sketchy-null-string
; sketchy-null-number
; sketchy-null-mixed
sketchy-number
; sketchy-number-and
untyped-type-import
nonstrict-import
untyped-import
unclear-type
deprecated-type
deprecated-utility
; dynamic-export
unsafe-getters-setters
unnecessary-optional-chain
unnecessary-invariant
signature-verification-failure
implicit-inexact-object
uninitialized-instance-property
ambiguous-object-type

[version]
0.133.0
